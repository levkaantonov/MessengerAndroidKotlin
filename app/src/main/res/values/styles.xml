<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="actionMenu" parent="Theme.AppCompat.Light">
        <item name="background">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorBlack</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="mainToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>
</resources>